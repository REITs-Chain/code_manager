<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>WDP</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/conf/spring-*.xml</param-value>
  </context-param>  
  <!-- 设置超时,分钟单位 -->
  <session-config> 
    <session-timeout>120</session-timeout> 
  </session-config>
  <listener>
    <description>spring支持</description>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <description>spring MVC servlet </description>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <description>spring mvc 配置文件</description>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/conf/springmvc-*.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <!-- main filter -->
  <filter>
      <filter-name>mainFilter</filter-name>
      <filter-class>ww.common.MainFilter</filter-class>
  </filter>
  <filter-mapping>
      <filter-name>mainFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- 字符乱码 -->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- <filter>
    <filter-name>adminLoginFilter</filter-name>
    <filter-class>ww.authen.AdminLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>adminLoginFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping> -->
  
  <!-- wwsecurity filter -->
  <filter>
      <filter-name>wwsecurity</filter-name>
      <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>
  <filter-mapping>
      <filter-name>wwsecurity</filter-name>
      <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  
  <!-- API接口过滤器 -->
  <filter>
    <filter-name>ApiLoginFilter</filter-name>
    <filter-class>ww.authen.ApiLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ApiLoginFilter</filter-name>
    <url-pattern>/api/*</url-pattern>
  </filter-mapping>
  
  <!-- PAPI接口过滤器 -->
  <filter>
    <filter-name>PApiFilter</filter-name>
    <filter-class>ww.authen.PApiFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PApiFilter</filter-name>
    <url-pattern>/papi/*</url-pattern>
  </filter-mapping>
  
  <!-- OpenAPI接口过滤器 -->
  <filter>
    <filter-name>OpenApiFilter</filter-name>
    <filter-class>ww.authen.OpenApiFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>OpenApiFilter</filter-name>
    <url-pattern>/openapi/*</url-pattern>
  </filter-mapping>
</web-app>